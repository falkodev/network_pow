{% extends "::base.html.twig" %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('security_login_check') }}" method="post">
        <label for="username">{{ "security.login.username"|trans({}, 'user') }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">{{ "security.login.password"|trans({}, 'user') }}:</label>
        <input type="password" id="password" name="_password" />

        <label for="remember_me">{{ "security.login.remember_me"|trans({}, 'user') }}</label>
        <input type="checkbox" id="remember_me" name="_remember_me" />

        <button type="submit">{{ "security.login.submit"|trans({}, 'user') }}</button>
    </form>
{% endblock body %}
